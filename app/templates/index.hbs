<div class="modules-toolbar">
  <div class="pull-right">
    <a href="#" class="btn preview-modules-button">
      Preview
    </a>
    <a href="#" class="btn btn-primary add-module-button">
      <i class="icon-plus"></i> Module
    </a>
    <a href="#" class="btn modules-settings-button">
      <i class="icon-settings"></i><i class="icon-mini-arrow-down"></i>
    </a>
  </div>
  <input type="search" placeholder="Search for module or item inside module" class="module-search">
</div>

<div class="item-group-container sortable-modules">
  {{#each module in controller}}
    <div class="module item-group-condensed" {{bindAttr data-module-id="module.id"}}>
      <table class="table sortable-module-items" style="min-height: 30px;min-width: 900px;">
        <thead>
        <tr>
          <th>
            <h3>
              <img src="img/module-handler.png" style="height: 12px;padding-bottom: 4px;" />
              <i class="icon-mini-arrow-right"></i>
              {{module.name}}
            </h3>
          </th>
          <th style="width: 140px;"></th>
          <th class="align-right" style="width: 240px;" colspan="2">
            [Prereqs]
          </th>
          <th class="no-wrap align-right" style="width: 140px;">
            <span class="module-published-button no-wrap">
              Published <i class="icon-publish" aria-hidden="true"></i>
            </span>
          </th>
          <th class="no-wrap no-right-padding" style="width: 100px;">
            <a href="#" class="btn add-item-button">
              <i class="icon-plus"></i>
            </a>
            <a href="#" class="btn module-settings-button">
              <i class="icon-settings"></i><i class="icon-mini-arrow-down"></i>
            </a>
          </th>
        </tr>
        </thead>
        <tbody {{bindAttr class=":sortable empty"}}>
          {{#each item in module.items}}
            <tr {{bindAttr data-module-item-id="item.id"}} class="module-item">
              <td class="long">
                <img src="img/item-handle.png" style="height: 12px;padding-bottom: 4px;" />
                <!-- span class="type_icon" title="Quiz">
                <i class="icon-document" aria-label="Item type: Document"></i>
                <i class="icon-download" aria-label="Item type: Download"></i>
                <i class="icon-discussion" aria-label="Item type: Discussion"></i>
                <i class="icon-assignment" aria-label="Item type: Assignment"></i>
                <i class="icon-quiz" aria-label="Item type: Quiz"></i>
                <i class="icon-link" aria-label="Item type: Link"></i>
                </span -->
                <i class="icon-assignment"></i>
                {{item.title}}
              </td>
              <td>
                Available at
              </td>
              <td>
                Due at
              </td>
              <td class="align-right">
                -/10 pts
              </td>
              <td class="align-right">
                {{module-item-publish}}
              </td>
              <td>
                {{module-item-cog}}
              </td>
            </tr>
          {{/each}}
        <tbody>
      </table>
    </div>
  {{/each}}
</div>