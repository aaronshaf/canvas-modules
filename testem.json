{
  "framework": "qunit",
  "launch_in_ci": [
    "Firefox",
    "PhantomJS"
  ],
  "launch_in_dev": [
    "Chrome"
  ],
  "src_files": [
    "components/*.coffee",
    "config/*.coffee",
    "controllers/*.coffee",
    "lib/*",
