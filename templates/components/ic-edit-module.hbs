{{#ic-popover open=open}}
  <div class="test-modal-overlay-translucent"></div>
  <div class="test-modal-overlay">
    <div class="test-modal">
      <div class="test-modal-titlebar">
        <div class="test-modal-close">
          {{#ic-popover-close}}
            <a class="btn btn-mini test2">
              <i class="icon-x"></i>
            </a>
          {{/ic-popover-close}}
        </div>
        Add Module
      </div>

      <form class="form">
        <div class="test-modal-content">
          <div class="control-group">
            <label class="control-label" for="inputEmail">Module name:</label>
            <div class="controls">
              <input type="text" autofocus required style="width: 350px">
            </div>
          </div>
          <hr />
          <div>
            <div>
              <strong>Before students can view this module, they must complete:</strong>
            </div>
            <div class="muted">
              <em>No prerequisites defined</em>
            </div>
            <div>
              <small>
                <a {{action 'toggleProperty' 'addPrerequisitePopupOpen'}}>
                  <i class="icon-add"></i>
                  Add prerequisite
                </a>
              </small>
              {{ic-new-assignment open=addPrerequisitePopupOpen}}
              {{#if addPrerequisitePopupOpen}}
                Yup
              {{else}}
                Nope
              {{/if}}
            </div>
          </div>
          <hr />
          <div>
            <div>
              <strong>This module is complete when:</strong>
            </div>
            <table>
              <thead>
                <tr>
                  <th>For</th>
                  <th style="text-align: left;">users must</th>
                  <th></th>
                </tr>
              </thead>
              <tbody style="border: 0 none">
                <tr>
                  <td style="width: 20%;">
                    <select>
                      <option>First quiz</option>
                    </select>
                  </td>
                  <td style="width: 20%;">
                    <select>
                      <option>Score at least</option>
                    </select>
                  </td>
                  <td style="white-space: nowrap;">
                    <input type="number" style="width: 20px;" />
                    out of
                    900
                    <a><i class="icon-end"></i></a>
                  </td>
                </tr>
              </tbody>
            </table>

            <div>
              <small>
                <a>
                  <i class="icon-add"></i>
                  Add requirement
                </a>
              </small>
            </div>

            <div style="margin-top: 12px;margin-bottom: 12px;">
              <label class="checkbox">
                <input type="checkbox" />
                Students must move through requirements in this module in sequential order
              </lable>
            </div>
          </div>
        </div>
        <div class="test-modal-footer">
          {{#ic-popover-close}}
            <a class="btn">Cancel</a>
          {{/ic-popover-close}}
          <button class="btn btn-primary">Add Module</button>
        </div>
      </form>
    </div>
  </div>
{{/ic-popover}}